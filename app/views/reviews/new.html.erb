
<div class="container-review">

  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.3)), url(<%= @inspirations.last.url %>)";>

    <h1>Congratulations on finishing the assembly.</h1>
    <p><strong>We hope you enjoy your product!</strong></p>
    <p>Please rate the provided guidance, and leave feedback regarding your experience.</p>

  </div>

  <div class="form">
    <%= simple_form_for([@product, @review]) do |f| %>
    <div class="rate">
      <input type="radio" id="star5" name="review[rating]" value="5" />
      <label for="star5" title="text">5 stars</label>
      <input type="radio" id="star4" name="review[rating]" value="4" />
      <label for="star4" title="text">4 stars</label>
      <input type="radio" id="star3" name="review[rating]" value="3" />
      <label for="star3" title="text">3 stars</label>
      <input type="radio" id="star2" name="review[rating]" value="2" />
      <label for="star2" title="text">2 stars</label>
      <input type="radio" id="star1" name="review[rating]" value="1" />
      <label for="star1" title="text">1 star</label>
    </div>
      <%= f.input :content, label: false, placeholder: "Please leave a comment", :input_html => {:rows => 5} %>
      <%= f.button :submit, "Send Feedback", class: "btn-e" %>
      <%= link_to "Skip", product_inspiration_path(@product) , class: "btn btn-e skip" %>
      <% end %>
  </div>

</div>


