<div class="index">

  <div class="container-lp-copy">

    <div class="content">
      <h1>What will you assemble today?</h1>
      <p>Search-Form</p>
      <p>Scan Barcode</p>
    </div>
  </div>


  <div class="product-display">
    <% if @search %>
      <div class="header">
        <h3>Search Results</h3>
        <p>These Products require assembly.<br> Click for more information.</p>
      </div>
      <% @products.each do |product| %>
        <%= render 'shared/card', product: product %>
      <% end %>
    <% else %>
      <div class="header">
        <h3>Your Products</h3>
        <p>These are Products you have bought, which require assembly. Mark as complete when done.</p>
        </div>
        <% @not_assembled.each do |product| %>
          <%= render 'shared/card', product: product %>
        <% end %>
    <% end %>
  </div>
</div>
